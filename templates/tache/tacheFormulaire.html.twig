{% extends 'base.html.twig' %}

{% block title %}Tache formulaire{% endblock %}

{% block body %}
{% if ismodification %}
    <div>
        <h4>Vous êtes dans le formulaire pour modifier la tache</h4>
    </div>
{% else %}
    <h4>Vous êtes dans le formulaire pour ajouter une tache</h4>
{% endif %}
<!--Formulaire de modification et de création de la tache-->
{{form_start(form)}}
    <div class="row">
        <div class="col-6">
            <div>
                {{ form_row(form.titre, {"label":"Titre"})}}
                {{ form_row(form.description, {"label":"Description"})}}
            </div>
        </div>
        <div class="col-6">
            {{ form_row(form.statut, {"label":"Statut"})}}
            {{ form_row(form.date_creation, {"label":"Date de création"})}}
            {{ form_row(form.mise_a_jour, {"label":"Mise à jour"})}}
        </div>
    </div>
        
    <input type="submit" class="btn btn-primary">
{{form_end(form)}}
<!--Fin du Formulaire-->
{% endblock %}